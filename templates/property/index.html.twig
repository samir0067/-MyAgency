{% extends 'base.html.twig' %}

{% block title 'Tous nos biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Recherche</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container  mt-4 text-center ">
        <h1>Voir tous les biens.</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, tempora vitae? Ab accusantium doloremque
            eius est expedita, facilis fuga hic illum molestiae omnis possimus praesentium quaerat, saepe, sapiente sed
            sit totam ullam ut!</p>
        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-3">
                    {% include 'property/_property.html.twig' %}
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
